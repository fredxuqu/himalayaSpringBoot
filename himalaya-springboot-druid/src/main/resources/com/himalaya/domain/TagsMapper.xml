<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himalaya.repository.HimalayaTagsDao">
    
    <resultMap id="BaseResultMap" type="com.himalaya.domain.TagsDO" >
        <id column="ID" property="id" jdbcType="INTEGER" />
        <result column="TAG_NAME" property="tagName" jdbcType="VARCHAR" />
        <result column="TYPE" property="type" jdbcType="INTEGER" />
        <result column="STATUS" property="status" jdbcType="INTEGER"/>
        <result column="RANK" property="rank" jdbcType="INTEGER" />
        <result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP" />
        <result column="CREATE_USER" property="createUser" jdbcType="VARCHAR" />
        <result column="MODIFY_TIME" property="modifyTime" jdbcType="TIMESTAMP" />
        <result column="MODIFY_USER" property="modifyUser" jdbcType="VARCHAR" />
    </resultMap>
        
    <sql id="Base_Column_List" >
        ID,TAG_NAME,TYPE,STATUS,RANK,CREATE_TIME,CREATE_USER,MODIFY_TIME,MODIFY_USER
    </sql>

    <select id="getAll" resultMap="BaseResultMap"  >
       SELECT 
       <include refid="Base_Column_List" />
	   FROM TB_TAGS
    </select>

    <select id="getById" parameterType="java.lang.Integer" resultMap="BaseResultMap" >
       SELECT 
       <include refid="Base_Column_List" />
	     FROM TB_TAGS
	    WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="TagsDO" >
       INSERT INTO TB_TAGS
       		(<include refid="Base_Column_List" />) 
       	VALUES
       		(#{id}, #{tagName}, #{type}, #{status}, #{rank}, #{createTime}, #{createUser}, #{modifyTime}, #{modifyUser})
    </insert>
    
    <update id="update" parameterType="TagsDO" >
       UPDATE 
       		TB_TAGS 
       SET 
       	<if test="tagName != null">TAG_NAME = #{tagName},</if>
       	<if test="type != null">TYPE = #{type},</if>
       	<if test="status != null">STATUS = #{status},</if>
       	<if test="rank != null">RANK = #{rank},</if>
       	<if test="modifyUser != null">MODIFY_USER = #{modifyUser},</if>
       	MODIFY_TIME = #{modifyTime}
       WHERE id = #{id}
    </update>
    
    <delete id="delete" parameterType="java.lang.Integer" >
       DELETE FROM
       		 TB_TAGS 
       WHERE 
       		 id =#{id}
    </delete>
</mapper>